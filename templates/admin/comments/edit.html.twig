{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire n°
    {{comment.id}}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°
            {{comment.id}}</h1>

        <div class="alert alert-info">
            <strong>
                Annonce liée:
                {{comment.ad.title}}
            </strong><br>
            <strong>Auteur:
                {{comment.author.firstName}}
                {{comment.author.lastName}}</strong>
            <br>
            <strong>Date:
                {{comment.createdAt | date('d/m/Y H:i')}}</strong><br>
            <strong>Note:
                {{comment.rating}}</strong>
        </div>
        {{form_start(form)}}
        {{form_widget(form)}}
        <button class="btn btn-primary">
            <i class="fas fa-check"></i>
            Enregistrer les modifications
        </button>
        {{form_end(form)}}
    </div>
{% endblock %}
