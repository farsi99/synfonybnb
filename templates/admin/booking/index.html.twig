{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des reservations
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des reservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for booking in pagination.data %}
                    <tr>
                        <td>{{booking.id}}</td>
                        <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                        <td>
                            <img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro mr-2">
                            {{booking.booker.firstName}}
                            {{booking.booker.lastName}}</td>
                        <td>{{booking.Ad.title}}</td>
                        <td>{{booking.duration}}</td>
                        <td>{{booking.amount}}
                            €</td>
                        <td>
                            <a class="btn btn-primary" href="{{path('admin_booking_edit', {'id':booking.id})}}">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" href="{{path('admin_booking_delete',{'id':booking.id})}}">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display}}
    </div>
{% endblock %}
